{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // Main aliases
      "@/*": ["./src/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/features/*": ["./src/features/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/app/*": ["./src/app/*"],
      
      // Feature aliases
      "@/auth/*": ["./src/features/auth/*"],
      "@/analytics/*": ["./src/features/analytics/*"],
      "@/links/*": ["./src/features/links/*"],
      "@/profile/*": ["./src/features/profile/*"],
      "@/redirect/*": ["./src/features/redirect/*"],
      
      // Shared aliases
      "@/ui/*": ["./src/shared/ui/*"],
      "@/layout/*": ["./src/shared/layout/*"],
      "@/hooks/*": ["./src/shared/hooks/*"],
      
      // Lib aliases
      "@/api/*": ["./src/lib/api/*"],
      "@/theme/*": ["./src/lib/theme/*"],
      "@/store/*": ["./src/lib/store/*"],
      "@/utils/*": ["./src/lib/utils/*"],
      "@/i18n/*": ["./src/lib/i18n/*"],
      

      "@history*": ["./src/@history"],
      "@mock-utils/*": ["./src/@mock-utils/*"],
      "@schema": ["./src/@schema"]
    },
    "declaration": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
