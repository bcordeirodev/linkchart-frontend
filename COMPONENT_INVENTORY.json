{
  "metadata": {
    "version": "1.0.0",
    "lastUpdated": "2024-12-20",
    "description": "Inventário completo de componentes reutilizáveis do Link Chat"
  },
  "components": {
    "layout": {
      "PageBreadcrumb": {
        "path": "@/components/PageBreadcrumb",
        "description": "Navegação breadcrumb padrão",
        "props": ["skipHome"],
        "usage": "SEMPRE usar em páginas principais",
        "examples": ["dashboard", "analytics", "profile"]
      },
      "EnhancedPaper": {
        "path": "@/components/EnhancedPaper",
        "description": "Container estilizado com elevação",
        "props": ["variant", "sx", "children"],
        "usage": "Container principal para conteúdo",
        "examples": ["forms", "cards", "sections"]
      },
      "MainLayout": {
        "path": "@/components/MainLayout",
        "description": "Layout principal da aplicação",
        "props": ["children"],
        "usage": "Layout base para páginas autenticadas"
      }
    },
    "metrics": {
      "MetricCard": {
        "path": "@/components/MetricCard",
        "description": "Card de métrica reutilizável",
        "props": ["title", "value", "icon", "color", "subtitle"],
        "colors": ["primary", "secondary", "success", "info", "warning", "error"],
        "usage": "SEMPRE usar para exibir métricas",
        "examples": ["dashboard", "analytics", "profile", "rate-limit"]
      }
    },
    "charts": {
      "ChartCard": {
        "path": "@/components/analytics/ChartCard",
        "description": "Container padrão para gráficos",
        "props": ["title", "children", "action"],
        "usage": "SEMPRE usar para containers de gráficos",
        "examples": ["analytics", "rate-limit"]
      },
      "ApexChartWrapper": {
        "path": "@/components/charts/ApexChartWrapper",
        "description": "Wrapper para gráficos ApexCharts",
        "props": ["type", "height", "series", "options"],
        "usage": "Renderização de todos os gráficos",
        "examples": ["analytics", "dashboard"]
      }
    },
    "navigation": {
      "TabPanel": {
        "path": "@/components/analytics/TabPanel",
        "description": "Painel de tab reutilizável",
        "props": ["children", "value", "index"],
        "usage": "SEMPRE usar para sistemas de tabs",
        "examples": ["analytics", "rate-limit"]
      }
    },
    "forms": {
      "LinkForm": {
        "path": "@/components/forms/LinkForm",
        "description": "Formulário unificado de links",
        "props": ["mode", "linkId", "initialData", "title", "onSuccess"],
        "modes": ["create", "edit"],
        "usage": "CRUD de links",
        "examples": ["link/create", "link/edit"]
      },
      "URLShortenerForm": {
        "path": "@/components/forms/URLShortenerForm",
        "description": "Formulário de encurtamento de URL",
        "props": ["onSuccess", "onError"],
        "usage": "Página pública de encurtamento",
        "examples": ["shorter"]
      },
      "URLInput": {
        "path": "@/components/forms/URLInput",
        "description": "Input especializado para URLs",
        "props": ["value", "onChange", "error", "helperText"],
        "usage": "Inputs de URL com validação"
      }
    },
    "data": {
      "DataTable": {
        "path": "@/components/data-table/DataTable",
        "description": "Tabela de dados com Material React Table",
        "props": ["data", "columns", "enableRowSelection", "initialState"],
        "usage": "Listagem de dados tabulares",
        "examples": ["link/page"]
      }
    },
    "auth": {
      "AuthButtons": {
        "path": "@/components/common/AuthButtons",
        "description": "Botões de autenticação padrão",
        "props": ["variant", "size"],
        "usage": "Páginas públicas e auth"
      },
      "AuthGuardRedirect": {
        "path": "@auth/AuthGuardRedirect",
        "description": "Proteção de rotas com redirecionamento",
        "props": ["auth", "children"],
        "usage": "Proteção de páginas"
      }
    },
    "feedback": {
      "CopyButton": {
        "path": "@/components/results/CopyButton",
        "description": "Botão de cópia para clipboard",
        "props": ["text", "label"],
        "usage": "Cópia de URLs e textos"
      },
      "ShareActions": {
        "path": "@/components/results/ShareActions",
        "description": "Ações de compartilhamento",
        "props": ["url", "title"],
        "usage": "Compartilhamento de links"
      }
    },
    "brand": {
      "BrandLogo": {
        "path": "@/components/common/BrandLogo",
        "description": "Logo da marca",
        "props": ["size", "variant"],
        "usage": "Headers e páginas públicas"
      }
    }
  },
  "hooks": {
    "data": {
      "useLinks": {
        "path": "@/hooks/useLinks",
        "description": "Gerenciamento completo de links",
        "returns": ["links", "loading", "error", "createLink", "updateLink", "deleteLink"],
        "usage": "CRUD de links em qualquer componente"
      },
      "useAnalytics": {
        "path": "@/hooks/useAnalytics",
        "description": "Dados de analytics",
        "returns": ["data", "loading", "error", "refetch"],
        "usage": "Dados analíticos"
      },
      "useLinkForm": {
        "path": "@/hooks/useLinkForm",
        "description": "Lógica de formulários de link",
        "returns": ["control", "handleSubmit", "formState", "loading"],
        "usage": "Formulários de criação/edição de links"
      }
    },
    "ui": {
      "useClipboard": {
        "path": "@/hooks/useClipboard",
        "description": "Funcionalidade de clipboard",
        "returns": ["copyToClipboard", "copied"],
        "usage": "Cópia de textos"
      },
      "useDebounce": {
        "path": "@/hooks/useDebounce",
        "description": "Debounce para inputs",
        "params": ["value", "delay"],
        "usage": "Busca e filtros"
      }
    }
  },
  "utils": {
    "charts": {
      "formatAreaChart": {
        "path": "@/utils/chartFormatters",
        "description": "Formatação para gráficos de área",
        "params": ["data", "xKey", "yKey", "color"],
        "returns": "{ series, options }",
        "usage": "SEMPRE usar para gráficos de área"
      },
      "formatBarChart": {
        "path": "@/utils/chartFormatters",
        "description": "Formatação para gráficos de barras",
        "params": ["data", "xKey", "yKey", "horizontal"],
        "returns": "{ series, options }",
        "usage": "SEMPRE usar para gráficos de barras"
      },
      "formatPieChart": {
        "path": "@/utils/chartFormatters",
        "description": "Formatação para gráficos de pizza",
        "params": ["data", "labelKey", "valueKey"],
        "returns": "{ series, options }",
        "usage": "SEMPRE usar para gráficos de pizza/donut"
      }
    },
    "text": {
      "capitalizeFirst": {
        "path": "@/utils/chartFormatters",
        "description": "Capitaliza primeira letra",
        "params": ["string"],
        "usage": "Formatação de texto"
      },
      "formatUrlForDisplay": {
        "path": "@/utils/chartFormatters",
        "description": "Formata URL para exibição",
        "params": ["url"],
        "usage": "Exibição de URLs em charts"
      }
    }
  },
  "types": {
    "analytics": {
      "path": "@/types/analytics",
      "interfaces": ["AnalyticsData", "AnalyticsComponentProps", "ClicksByDay", "TopLink"],
      "usage": "Dados de analytics e charts"
    },
    "link": {
      "path": "@/types/link",
      "interfaces": ["ILinkCreate", "ILinkUpdate", "ILinkResponse"],
      "usage": "Operações com links"
    },
    "user": {
      "path": "@/types/user",
      "interfaces": ["UserProfile"],
      "usage": "Dados de usuário"
    },
    "rateLimit": {
      "path": "@/types/rateLimit",
      "interfaces": ["RateLimitDashboard", "RateLimitSummary"],
      "usage": "Dados de rate limiting"
    },
    "shorter": {
      "path": "@/types/shorter",
      "interfaces": ["IShortUrl"],
      "usage": "Encurtamento de URLs"
    }
  },
  "patterns": {
    "page_structure": {
      "max_lines": 100,
      "required_imports": ["Box", "Typography", "CircularProgress", "Alert"],
      "required_components": ["[Modulo]Header", "[Modulo]Metrics", "[Modulo]Tabs"],
      "loading_pattern": "CircularProgress com Typography",
      "error_pattern": "Alert com severity='error'"
    },
    "component_structure": {
      "max_lines": 200,
      "required_jsdoc": true,
      "export_default": true,
      "typescript_strict": true
    },
    "hook_structure": {
      "max_lines": 150,
      "required_returns": ["data", "loading", "error"],
      "error_handling": "useAppDispatch + showMessage",
      "memoization": "useCallback para funções"
    }
  },
  "performance": {
    "bundle_targets": {
      "page": "< 15 kB",
      "component": "< 5 kB",
      "hook": "< 3 kB",
      "types": "< 2 kB"
    },
    "optimization": {
      "dynamic_imports": "Para gráficos pesados",
      "memoization": "useMemo, useCallback",
      "lazy_loading": "React.lazy para componentes grandes"
    }
  },
  "success_metrics": {
    "code_reuse": ">= 70%",
    "bundle_reduction": ">= 50%",
    "typescript_coverage": "100%",
    "component_consistency": "100%",
    "documentation": ">= 90%"
  }
}
